<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/imgDauGa"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ingredient_illus_1" />

            <TextView
                android:id="@+id/txtNameIngredient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/inter_medium"
                android:text="Đậu gà"
                android:textColor="@color/green_800"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgDauGa"
                app:layout_constraintStart_toEndOf="@+id/imgDauGa"
                app:layout_constraintTop_toTopOf="@+id/imgDauGa" />

            <TextView
                android:id="@+id/txtSoluong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="800"
                android:textSize="14dp"
                android:textColor="@color/neutral_700"
                android:fontFamily="@font/inter_medium"
                app:layout_constraintBottom_toBottomOf="@+id/txtDonvi"
                app:layout_constraintEnd_toStartOf="@+id/txtDonvi"
                app:layout_constraintTop_toTopOf="@+id/txtDonvi"
                app:layout_constraintVertical_bias="0.484" />

            <TextView
                android:id="@+id/txtDonvi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="grams"
                android:textSize="14dp"
                android:textColor="@color/neutral_700"
                android:fontFamily="@font/inter_medium"
                app:layout_constraintBottom_toBottomOf="@+id/imgDauGa"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imgDauGa" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>